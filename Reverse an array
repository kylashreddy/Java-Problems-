// Reverse an Array 

import java.util.*;
public class Main{
    public static void main(String[] args){
        Scanner sc = new Scanner(System.in);
        
        System.out.println("Enter the size of an array");
        int n = sc.nextInt();
        
        int[] arr = new int[n];
        
        System.out.println("Enter the no of elements of an array");
        for(int i=0; i<n; i++){
            arr[i] = sc.nextInt();
        }
        
        int start = 0;
        int end = arr.length-1;
        
        while(start<end){
            int temp = arr[start];
            arr[start] = arr[end];
            arr[end] = temp;
            
            
            start++;
            end--;
        }
        
        System.out.println("Reverse an array:" + Arrays.toString(arr));
        
    }
}
